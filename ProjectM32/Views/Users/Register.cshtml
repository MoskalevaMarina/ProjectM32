@{
    ViewData["Title"] = "Регистрация нового пользователя.";
}
@model ProjectM32.Models.Db.User

<div >
    <div>
        @if (Model == null)
        {
            <h3 style="text-align: left">Добро пожаловать в наш блог!</h3>
            <br>

            <form method="post">
                <div>
                    <div>
                        <label asp-for="FirstName"></label><br />
                        <input type="text" asp-for="FirstName" />
                    </div>
                    <div>
                        <label asp-for="LastName"></label><br />
                        <input type="text" asp-for="LastName" />
                    </div>

                    <div >
                        <p></p>
                        <button class="btn btn-primary"> Регистрация  </button>
                    </div>
                </div>
            </form>
        }
        else
        {
            @await Html.PartialAsync("Thanks")
        }
    </div>
</div>
